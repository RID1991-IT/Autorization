<Window x:Class="Authorization.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Authorization"
        mc:Ignorable="d"
        Title="Регистрация" Height="450" Width="500" ResizeMode="NoResize" Background="White">
    <Grid>
        <Label Content="Регистрация" HorizontalAlignment="Center" Height="110" Margin="0,10,0,0" VerticalAlignment="Top" Width="420" FontSize="72" FontWeight="Normal" FontFamily="Segoe UI Light" Foreground="Black"/>
        <TextBlock x:Name="label_Login" Text="Логин" HorizontalAlignment="Left" Margin="40,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="input_Login" HorizontalAlignment="Center" Margin="0,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="420" FontSize="18"/>
        <TextBlock x:Name="label_Password" Text="Пароль" HorizontalAlignment="Left" Margin="40,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="18"/>
        <PasswordBox x:Name="input_Password" HorizontalAlignment="Center" Margin="0,234,0,0" VerticalAlignment="Top" Width="420" FontSize="18" PasswordChanged="input_Password_PasswordChanged"/>
        <TextBlock x:Name="label_RepeatPassword" Text="Повторите пароль" HorizontalAlignment="Left" Margin="40,265,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18"></TextBlock>
        <PasswordBox x:Name="input_RepeatPassword" HorizontalAlignment="Center" Margin="0,294,0,0" VerticalAlignment="Top" Width="420" FontSize="18"/>
        <Button x:Name="button_SignUp" Content="Отправить" HorizontalAlignment="Left" Margin="40,346,0,0" VerticalAlignment="Top" FontSize="18" BorderBrush="Black" Background="{x:Null}" Width="130" Click="button_SignUp_Click"/>
        <Button x:Name="button_Clear" Content="Очистить" HorizontalAlignment="Center" Margin="0,346,0,0" VerticalAlignment="Top" FontSize="18" Background="{x:Null}" BorderBrush="Black" Width="130" Click="button_Clear_Click"/>
        <Button x:Name="button_Cancel" Content="Отмена" HorizontalAlignment="Left" Margin="330,346,0,0" VerticalAlignment="Top" FontSize="18" Background="{x:Null}" BorderBrush="Black" Width="130" Click="button_Cancel_Click"/>


    </Grid>
</Window>
